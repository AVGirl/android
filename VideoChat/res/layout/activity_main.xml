<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.videochat.MainActivity" >

    	<LinearLayout
    	    android:visibility="gone"
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	    
    	    
    <EditText
        android:id="@+id/main_edit_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入服务ip" />

    <EditText
        android:id="@+id/main_edit_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入服务端口" />
	</LinearLayout>
    

    <Button
        android:id="@+id/main_btn_enterServer"
        android:layout_width="match_parent"
android:layout_height="150dp"
        android:onClick="onClick"
        android:text="S"
        android:textSize="20sp" />

    <Button
        android:id="@+id/main_btn_enterClient"
        android:layout_width="match_parent"
	android:layout_height="150dp"
        android:onClick="onClick"
        android:text="C"
        android:textSize="20sp" />

    <Button
        android:id="@+id/main_btn_test"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:onClick="onClick"
        android:text="T"
        android:textSize="20sp" />
    
    <Button 
android:layout_width="wrap_content"
android:text=" ? "
    android:onClick="onClick"
android:textSize="16sp"
android:layout_height="wrap_content"
 android:id="@+id/main_btn_help"

/>
    
    
<!--     android:src="@drawable/girl" -->

</LinearLayout>