<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/actClient_LinearLayout"
    android:layout_width="match_parent"
   tools:context="com.example.videochat.xUI_Client"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    
    	<LinearLayout
    	    android:visibility="gone"
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	    
    
    <Button 
        android:id="@+id/actClient_btn_connect"
        android:onClick="onClick"
android:layout_width="match_parent"
android:text="连接服务"
android:textSize="16sp"
android:layout_height="wrap_content"
/>
    
     <Button 
        android:id="@+id/actClient_btn_test"
        android:onClick="onClick"
android:layout_width="match_parent"
android:text="卸载"
android:textSize="16sp"
android:layout_height="wrap_content"
/>
    
    
     	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
<Button 
         android:id="@+id/actClient_btn_frontCamera"
android:layout_width="wrap_content"
       android:onClick="onClick"
android:text="前置摄像头"
android:textSize="16sp"
android:layout_height="wrap_content"
/>
<Button 
           android:onClick="onClick"
         android:id="@+id/actClient_btn_backCamera"
android:layout_width="wrap_content"
android:text="后置摄像头"
android:textSize="16sp"
android:layout_height="wrap_content"
/>


	</LinearLayout>
    
    
 <Button 
        android:id="@+id/actClient_btn_startPreview"
        android:onClick="onClick"
android:layout_width="match_parent"
android:text="启动相机"
android:textSize="16sp"
android:layout_height="wrap_content"
/>
    	    
    	    
	</LinearLayout>
    

    
   <!--       android:background="@drawable/bj" android:scaleType="fitXY" -->
        <ImageView 
          
      android:background="@drawable/girl"
     android:id="@+id/actClient_img_preview"
    android:layout_width="200dp"
    android:layout_height="200dp"
    />
    
    
