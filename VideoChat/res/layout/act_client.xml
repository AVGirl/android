<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/actClient_LinearLayout"
    android:layout_width="match_parent"
    
   tools:context="com.example.videochat.xUI_Client"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    
    	<LinearLayout
    	    android:id="@+id/actClient_ll_control"
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
    		<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	        <Button 
        android:id="@+id/actClient_btn_connect"
        android:onClick="onClick"
android:layout_width="wrap_content"
android:layout_weight="1"
android:text="连接服务器"
android:textSize="20sp"
android:layout_height="99dp"
/>
	        
	        	        <Button 
	        	            android:layout_weight="1"
        android:id="@+id/actClient_btn_disconnect"
        android:onClick="onClick"
android:layout_width="wrap_content"
android:visibility="gone"
android:text="断开连接"
android:textSize="16sp"
android:layout_height="wrap_content"
/>
	        
	        
	        
	        
	</LinearLayout>

    
     <Button 
        android:id="@+id/actClient_btn_test"
        android:onClick="onClick"
android:layout_width="match_parent"
android:visibility="gone"
android:text="卸载"
android:textSize="16sp"
android:layout_height="wrap_content"
/>
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/actClient_btn_frontCamera"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="摄像头->前置"
                android:textSize="16sp" />

            <Button
                android:id="@+id/actClient_btn_backCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="摄像头->后置"
                android:textSize="16sp" />
        </LinearLayout>
             <Button
                android:id="@+id/actClient_btn_hideControl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="隐藏"
                android:textSize="16sp" />
</LinearLayout>
    
       
    
