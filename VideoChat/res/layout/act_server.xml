<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/actServer_ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   tools:context="com.example.videochat.xUI_Server"
    android:orientation="vertical"
    >
	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
    <Button
        android:id="@+id/actServer_btn_startServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onClick"
        android:text="启动服务"
        android:textSize="16sp" />
    
         
             <Button   
        android:id="@+id/actServer_btn_rebootServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_weight="1"
        android:text="重启服务"
        android:textSize="16sp" />
                  
             <Button   
                 android:layout_weight="1"
        android:id="@+id/actServer_btn_stopServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="停止服务"
        android:textSize="16sp" />
    

      
	</LinearLayout>
  
                  <Button   
            android:visibility="gone"
        android:id="@+id/actServer_btn_enterClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="进入客户端"
        android:textSize="12sp" />
             <Button   
        android:id="@+id/actServer_btn_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="测试"
        android:textSize="16sp" />
             
          
        
        
    
    

    <SurfaceView

        android:id="@+id/surfaceView1"
        android:layout_width="200dp"
        android:layout_height="200dp" />
<!--  android:visibility="gone" -->
    <ImageView 
        android:id="@+id/actServer_img_imageView1"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:background="@drawable/girl"
      />

</LinearLayout>